<h1>Languages</h1>
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @languages.each do |language| %>
      <tr>
        <td><%= language.id %></td>
        <td><%= link_to language.name, language_path(language) %></td>
        <td>
          <%= link_to 'Edit', edit_language_path(language), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', language_path(language), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_language_path, :class => 'btn btn-primary' %>
