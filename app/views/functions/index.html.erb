<h1>Functions</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @functions.each do |function| %>
      <tr>
        <td><%= function.id %></td>
        <td><%= link_to function.name, function_path(function) %></td>
        <td>
          <%= link_to 'Edit', edit_function_path(function), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', function_path(function), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_function_path, :class => 'btn btn-primary' %>
